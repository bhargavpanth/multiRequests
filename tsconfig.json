{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es7"],  
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "strict": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
